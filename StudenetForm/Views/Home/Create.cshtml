@model StudenetForm.Models.studentInfo

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form" style="background-color:lightgray">
        <h2 style="text-align:center">Student's Registeration Form</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            
            <div class="col-md-12">
                <div class="form-group">
                    <label style="margin-left:-14px" class="control-label col-sm-1" for="email">StudentId</label>
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.studentId, new { htmlAttributes = new { @class = "form-control", style = "width:50% !important;" } })
                        @Html.ValidationMessageFor(model => model.studentId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-4"></div>
                    <div class="form-group">
                        <label style="padding-left:26px" class="control-label col-sm-1" for="email">SchoolYear</label>
                        <div style="padding-left: 41px;" class="col-sm-3">

                            @Html.DropDownListFor(model => model.YearId, (IEnumerable<SelectListItem>)ViewBag.schoolyearlistBag
                           , new { @class = "form-control pull-right", style = "width:60% !important;" })
                            @Html.ValidationMessageFor(model => model.YearId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-md-12">
                <div style="padding-top: 10px" class="form-group">
                    <label style="padding-left: 0px" class="control-label col-sm-1" for="email">FirstName</label>
                    <div style="padding-left: 1px" class="col-sm-3">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>




                <div class="form-group">
                    <label class="control-label col-sm-1" for="email">LastName</label>
                    <div class="col-sm-3">

                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <label class="control-label col-sm-1" for="email">MiddleName</label>
                    <div class="col-sm-3">

                        @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control pull-right", style = "width:60% !important;" } })
                        @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="control-label col-sm-1" for="email">Adress</label>
                <div class="col-sm-3">
                    @*@Html.EditorFor(model => model.S_Adress, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.TextAreaFor(model => model.S_Adress, new { @class = "form-control", style = "width:100% !important; height: 65px" })
                    @Html.ValidationMessageFor(model => model.S_Adress, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-1" for="email">DateOfBirth</label>
                <div class="col-sm-3">
                    @Html.EditorFor(model => model.Date_Of_Birth, new { htmlAttributes = new { @class = "form-control", Type = "DATE", style = "width:60% !important;" } })
                    @Html.ValidationMessageFor(model => model.Date_Of_Birth, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-1" for="email">PlaceOfBirth</label>
                <div class="col-sm-3">
                    @Html.TextAreaFor(model => model.Place_Of_Birth, new { @class = "form-control", style = "width:100% !important;height: 60px" })
                    @Html.ValidationMessageFor(model => model.Place_Of_Birth, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="row">
            <div class="form-group">
                <label class="control-label col-sm-1" for="email">Age</label>
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control pull-left", style = "width:40% !important;" } })
                    @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-1" for="email">Gender</label>
                <div class="col-lg-1">
                    <label>Male</label>
                </div>
                <div class="col-lg-1">
                    @Html.RadioButtonFor(a => a.Gender, "Male", new { @class = "form-control", style = "width: 19px" })

                </div>
                <div class="col-lg-1">
                    <label>Female</label>
                </div>
                    <div class="col-lg-1">
                   
                    @Html.RadioButtonFor(a => a.Gender, "Female", new { @class = "form-control", style = "width: 19px" })

                </div>

            </div>
            <div class="form-group">
                <label class="control-label col-sm-1" for="email">Status</label>
                <div class="col-sm-3">
                    @Html.DropDownListFor(model => model.StatusId, (IEnumerable<SelectListItem>)ViewBag.statusListBag, new { @class = "form-control", style = "width:40% !important;" })
                    @Html.ValidationMessageFor(model => model.StatusId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        

        <div class="row">
            <div class="form-group">
                <label class="control-label col-sm-1" for="email">Year</label>
                <div class="col-sm-3">
                    @Html.DropDownListFor(model => model.class_YearsId, (IEnumerable<SelectListItem>)ViewBag.YearListBag, new { @class = "form-control", style = "width:40% !important;" })
                    @Html.ValidationMessageFor(model => model.class_YearsId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-1" for="email">Guardian</label>
                <div class="col-sm-3">
                    @Html.EditorFor(model => model.Guardian, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Guardian, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-1" for="email">Relation</label>
                <div class="col-sm-3">
                    @Html.EditorFor(model => model.Relation, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Relation, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>



        <div class="row">
            <div class="form-group">
                <label class="control-label col-sm-1" for="email">Address</label>
                <div class="col-sm-5">
                    @Html.TextAreaFor(model => model.G_Address, new { @class = "form-control", style = "width:100% !important;height: 67px;" })
                    @Html.ValidationMessageFor(model => model.G_Address, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-group">
                <label style="padding-left:180px" class="control-label col-sm-2" for="email">Contact#</label>
                <div class="col-sm-4">
                    @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control pull-right " } })
                    @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <br />


        <div class="row">


            <div class="col-lg-6">

                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary" style=" height: 54px;
    width: 58px;">
                        |<
                    </button>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary" style=" height: 54px;
    width: 58px;">
                        >>
                    </button>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary" style=" height: 54px;
    width: 58px;">
                        <<
                    </button>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary" style=" height: 54px;
    width: 58px;">
                        >|
                    </button>
                </div>

            </div>
            <div class="form-group">
                <div class="col-sm-2 col-lg-push-2">
                    <input type="submit" value="New" class="btn btn-primary" style="height: 59px; width: 122px;" />
                </div>
                <div class="form-group">
                    <div class="col-sm-2 col-lg-push-2">
                        <input type="submit" value="Create" class="btn btn-primary" style="height: 59px ;
    width: 170px;" />
                    </div>
                </div>
            </div>

        </div>

    </div>

}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>




